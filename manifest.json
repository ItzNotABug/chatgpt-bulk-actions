{
  "manifest_version": 3,
  "name": "ChatGPT Bulk Actions",
  "version": "1.0",
  "description": "Bulk deletes for ChatGPT conversations!",
  "permissions": [
    "notifications"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*"
      ],
      "js": [
        "actions.js"
      ]
    }
  ],
  "icons": {
    "16": "icon/bulk-actions.png",
    "48": "icon/bulk-actions.png",
    "128": "icon/bulk-actions.png"
  }
}
